<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mImageView_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="188dp"
        android:layout_marginRight="226dp"
        android:src="@drawable/close_dialog_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTextView_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="237dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/mSeekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:max="100"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_xf_bg"
            android:thumb="@drawable/shape_xf_thumb" />

        <TextView
            android:id="@+id/mTextView_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/i_aqqj"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>

