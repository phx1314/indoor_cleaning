<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clean_bg">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="114dp"
            android:layout_marginRight="172dp"
            android:layout_marginBottom="43dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="522dp"
                android:layout_height="match_parent"
                android:layout_marginRight="167dp">

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="173dp"
                            android:layout_height="70dp"
                            android:background="@drawable/clean_wave">

                            <com.deepblue.cleaning.cleanview.WaveView
                                android:id="@+id/wv_clean_water_play"
                                android:layout_width="173dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:wave1Color="#00fff9"
                                app:waveHeightPercent="0" />

                            <TextView
                                android:id="@+id/tv_clean_water_play"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:maxLines="1"
                                android:text="0%"
                                android:textColor="#ffffff"
                                android:textSize="28sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="@string/clean_water"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="173dp"
                            android:layout_height="70dp"
                            android:background="@drawable/clean_wave">

                            <com.deepblue.cleaning.cleanview.WaveView
                                android:id="@+id/wv_dirty_water_play"
                                android:layout_width="173dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:wave1Color="#f7b500"
                                app:waveHeightPercent="0" />

                            <TextView
                                android:id="@+id/tv_dirty_water_play"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:maxLines="1"
                                android:text="0%"
                                android:textColor="#ffffff"
                                android:textSize="28sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="@string/dirty_water"
                            android:textColor="#ffffff"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/btn_push"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_yuan"
                        android:gravity="center"
                        android:text="@string/push_water"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="517dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_map">

                    <RelativeLayout
                        android:id="@+id/rl_workinfo"
                        android:layout_width="match_parent"
                        android:layout_height="517dp">

                        <RelativeLayout
                            android:id="@+id/rl_pro"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="122dp">

                            <com.deepblue.cleaning.cleanview.RoundProgressBar
                                android:id="@+id/pb_work_progress"
                                android:layout_width="190dp"
                                android:layout_height="190dp"
                                android:progress="50"
                                app:reach_height="8dp"
                                app:round_color="#35ffffff"
                                app:round_progresscolor="#00fff9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="51dp"
                                android:text="@string/has_done"
                                android:textColor="#87B8F1"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="81dp"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_protask"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#87B8F1"
                                    android:textSize="60sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_setmodel"
                            android:layout_width="180dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/rl_pro"
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="65dp"
                            android:background="@mipmap/bg_play_btn"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ic_play_work_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@mipmap/icon_water1" />

                                <TextView
                                    android:id="@+id/tv_play_work_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/common"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="298dp"
                            android:layout_marginTop="122dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/round" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/planned_area"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginLeft="30dp"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_planned_area"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ffffff"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text="@string/activity_play__"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/round" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/done_area"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginLeft="30dp"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_done_area"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ffffff"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text="@string/activity_play__"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/round" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/work_time"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_work_time"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginLeft="30dp"
                                android:textColor="#ffffff"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/round" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/remaining_time"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_remaining_time"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginLeft="30dp"
                                android:maxLines="1"
                                android:textColor="#ffffff"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/round" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loop_tims"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_loop_tims"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="30dp"
                                android:textColor="#ffffff"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_workmap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:visibility="gone">

                        <com.deepblue.cleaning.cleanview.TransformativeImageView
                            android:id="@+id/tiv_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            app:max_scale="4"
                            app:min_scale="1"
                            app:revert_duration="300"
                            app:scale_center="finger_center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:paddingLeft="20dp"
                            android:paddingBottom="17dp">

                            <LinearLayout
                                android:id="@+id/ll_gofilling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_filling" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/filling_point"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_gopullwater"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_pullwater" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/pull_water_point"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_gopushwater"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/ll_gopullwater"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_pushwater_normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/push_water_point"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/rg_task_view"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        android:checkedButton="@id/rb_work_info"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_work_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_radio_btn_underline"
                            android:button="@null"
                            android:paddingBottom="10dp"
                            android:text="@string/work_map"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <RadioButton
                            android:id="@+id/rb_work_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="73dp"
                            android:background="@drawable/selector_radio_btn_underline"
                            android:button="@null"
                            android:paddingBottom="10dp"
                            android:text="@string/work_info"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />
                    </RadioGroup>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_mapname_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="---"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <com.deepblue.cleaning.cleanview.MaxHeightRecyclerView
                    android:id="@+id/rv_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mapname_play"
                    android:layout_marginTop="28dp"
                    android:paddingRight="1dp"
                    android:scrollbarSize="10dp"
                    android:scrollbarThumbVertical="@drawable/listview_thumb"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal"
                    android:paddingRight="40dp">

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="@drawable/play_okbutton"
                        android:text="@string/stop"
                        android:textColor="#ffffff"
                        android:textSize="35sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="@drawable/dialog_okbutton"
                        android:text="@string/suspend"
                        android:textColor="#ffffff"
                        android:textSize="35sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/layout_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

